<UserControl x:Class="Noto.Views.UserControls.DeskOfBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Noto.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">

    <Border Style="{DynamicResource PanelsBackground}" CornerRadius="6" BorderThickness="1" Margin="0" Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Viewbox>
                    <Rectangle x:Name="DeskImage" Style="{DynamicResource DeskImageRec}"></Rectangle>
                </Viewbox>
            </Grid>
            <Grid Grid.Column="1">
                <Viewbox>
                    <TextBlock x:Name="DeskName" Style="{DynamicResource DeskName}">Name</TextBlock>
                </Viewbox>
            </Grid>
        </Grid>
    </Border>
</UserControl>
