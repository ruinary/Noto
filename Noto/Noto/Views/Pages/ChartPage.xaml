<Page x:Class="Noto.Views.Pages.ChartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Noto.Views.Pages"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChartPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Viewbox>
                <Calendar x:Name="calendar" SelectionMode="MultipleRange" SelectedDatesChanged="SelectedDatesChanged" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White"/>
            </Viewbox>
        </Grid>
        <Grid Grid.Column="1">
            <lvc:CartesianChart x:Name="chartDiagram" LegendLocation="Bottom" >
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis LabelFormatter="{Binding YFormatter}"/>
                </lvc:CartesianChart.AxisY>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis x:Name="lablesChart"/>
                </lvc:CartesianChart.AxisX>
            </lvc:CartesianChart>
        </Grid>

        
    </Grid>
</Page>
